<!doctype html>
<html>
  <head>
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta charset="utf-8">
    <meta content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport">
    <meta name="description" content="An aspiring BYU Animation student with an emphasis in rigging.">
    <title><%= current_page.data.title %></title>
    <%= stylesheet_link_tag :site %>

    <link rel="shortcut icon" href="/images/favicon.png" />

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="/javascripts/jquery.gridster.min.js"></script>
    <script src="/javascripts/jquery.sticky.js"></script>
  </head>

  <body class="<%= page_classes %>">
    <%= yield %>
  </body>

  <script>
    $(function() {
      $('body').addClass('loaded');

      var setupLayout = function() {
        var width = (window.innerWidth > 0) ? window.innerWidth : screen.width;
        if (width > 640) {
          var base_width = ($('.grid').width() - 30 * 5) / 4;

          var gridster = $('.grid').gridster({
            widget_margins: [30, 30],
            widget_base_dimensions: [base_width, base_width * 1.2],
            min_cols: 1,
            max_cols: 4,
          }).data('gridster');

          gridster.disable();

          $('.grid').css({ 'width': 'auto' });
          gridster.generate_stylesheet({rows: 4, cols: 4, widget_base_dimensions: [base_width, base_width * 1.2]});

          $('.grid').each(function() {
            var lastElement = $(this).find('li:last-of-type');
            $(this).css({ 'height': lastElement.position().top + lastElement.height() + 30 });
          });
        } else {
          $('.grid').css({ 'height' : 'auto' });          
        }
      }

      setupLayout();

      $(window).on('resize', function() {
        setupLayout();
      });

      $('.nav').sticky({ topSpacing: 0 });

      $('.nav a').on('click', function(e) {
        e.preventDefault();

        $('html, body').animate({
          scrollTop: $($(this).attr('href')).offset().top - 60
        }, 1000);
      });

      $('.grid li').on('click', function(e) {
        e.preventDefault();

        $('.overlay').html($(this).html());
        $('.overlay').addClass('active');
        $('.overlay video').attr('autoplay', true);
      });

      var demoReelVideo = $(".demo-reel-video")[0];

      $('.js-trigger-demo-reel-play').on('click', function(e) {
        e.preventDefault();

        $(this).addClass('hidden');
        demoReelVideo.play()
        $(demoReelVideo).attr('controls', 'controls');
      });

      demoReelVideo.onended = function(e) {
        demoReelVideo.load();     
        $('.js-trigger-demo-reel-play').removeClass('hidden');
        $(demoReelVideo).removeAttr('controls');
      };

      $('.overlay').on('click', function(e) {
        e.preventDefault();

        $('.overlay').removeClass('active');
        $('.overlay video').attr('autoplay', false);
      });

      $(window).on('scroll', function() {
        $('.portfolio-pieces').each(function() {
          if ($(window).scrollTop() >= $(this).offset().top - 200) {
            var id = $(this).attr('id');
            $('.nav a').removeClass('active');
            $('.nav a[href="#'+ id +'"]').addClass('active');
          }
        });

        if ($(window).scrollTop() + $(window).height() > $(document).height() - 100) {
          $('.nav a').removeClass('active');
          $('.nav a[href="#figure-drawing"]').addClass('active');
        }
      });
    });
  </script>

